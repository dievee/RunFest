@model RunFest.Models.User
@{
    ViewBag.Title = "Личный кабинет";
}
<div class="row">
    <div class="col-sm-4">
        <form asp-action="Index" asp-controller="Account">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">UserName</label>
                <input type="text" asp-for="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label">FullName</label>
                <input type="text" asp-for="FullName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RunningNumber" class="control-label">RunningNumber</label>
                <input type="number" asp-for="RunningNumber" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label">StartTime</label>
                <input type="text" asp-for="StartTime" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="FinishTime" class="control-label">FinishTime</label>
                <input type="text" asp-for="FinishTime" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
